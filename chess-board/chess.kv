#:kivy 1.0.9
#:import win kivy.core.window

<ChessGame>:    
    pawn_1 : pawn
    pawn_2 : pawn2
    s_width : win.Window.width
    s_height : win.Window.height
    Chessboard:
        id: main_board
        center: self.parent.center
        Pawn:
            id: pawn
            white: 0
        Pawn:
            id: pawn2

<Chessboard>:
    size : self.parent.s_height, self.parent.s_height
    #size : self.parent.s_width, self.parent.s_width
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'board2.png'

<Pawn>:
    p_size : self.parent.width*.125
    canvas:
        Rectangle:
            pos: self.position_row*.125*self.parent.width+self.parent.x, self.position_col*.125*self.parent.height+self.parent.y
            size: self.p_size, self.p_size
            source: 'chess-pieces/white/pawn.png' if self.white == 1 else 'chess-pieces/black/pawn1.png'
    
